{
  "name": "word-bank",
  "version": "1.0.0",
  "description": "A web service to learn new words in Korean and store them in your own virtual notebook system for fast vocabulary acquisition.",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development && node --watch app.js",
    "test": "NODE_ENV=test && jest",
    "test:lang": "NODE_ENV=test jest __tests__/languagesRouter.test.js",
    "test:user": "NODE_ENV=test jest __tests__/userRouter.test.js",
    "test:cat": "NODE_ENV=test jest __tests__/categoriesRouter.test.js",
    "test:word": "NODE_ENV=test jest __tests__/wordsRouter.test.js",
    "db:reset": "prisma migrate reset prisma/seed.js",
    "db:reset:test": "NODE_ENV=test prisma migrate reset prisma/tests_seed.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js",
    "seed:test": "cross-env NODE_ENV=test node prisma/tests_seed.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SaraToth/word-bank.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SaraToth/word-bank/issues"
  },
  "homepage": "https://github.com/SaraToth/word-bank#readme",
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "prisma": "^6.16.1",
    "supertest": "^7.1.4"
  }
}
